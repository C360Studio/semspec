{
  "version": "1.0.0",
  "platform": {
    "org": "mycompany",
    "id": "multipath-dev",
    "environment": "dev"
  },
  "nats": {
    "urls": ["nats://localhost:4222"],
    "max_reconnects": -1,
    "reconnect_wait": "2s",
    "jetstream": {
      "enabled": true
    }
  },
  "components": {
    "ast-indexer": {
      "name": "ast-indexer",
      "type": "processor",
      "enabled": true,
      "config": {
        "watch_paths": [
          {
            "path": "./backend/services/*",
            "org": "mycompany",
            "project": "backend",
            "languages": ["go"],
            "excludes": ["vendor", "testdata"]
          },
          {
            "path": "./frontend",
            "org": "mycompany",
            "project": "frontend",
            "languages": ["typescript", "javascript"],
            "excludes": ["node_modules", "dist", ".next"]
          },
          {
            "path": "./shared/lib",
            "org": "mycompany",
            "project": "shared",
            "languages": ["go", "typescript"],
            "excludes": ["vendor", "node_modules"]
          }
        ],
        "watch_enabled": true,
        "index_interval": "60s"
      }
    }
  },
  "streams": {
    "AGENT": {
      "subjects": [
        "tool.execute.>",
        "tool.result.>",
        "graph.ingest.entity"
      ],
      "max_age": "24h",
      "storage": "memory",
      "replicas": 1
    }
  }
}
