{
  "version": "1.0.0",
  "platform": {
    "org": "semspec",
    "id": "semspec-dev",
    "environment": "dev"
  },
  "nats": {
    "urls": ["nats://localhost:4222"],
    "max_reconnects": -1,
    "reconnect_wait": "2s",
    "jetstream": {
      "enabled": true
    }
  },
  "components": {
    "ast-indexer": {
      "name": "ast-indexer",
      "type": "processor",
      "enabled": true,
      "config": {
        "watch_paths": [
          {
            "path": ".",
            "org": "semspec",
            "project": "semspec",
            "languages": ["go"],
            "excludes": ["vendor", "node_modules", "dist", ".next", "build", "coverage"]
          }
        ],
        "watch_enabled": true,
        "index_interval": "5m"
      }
    }
  },
  "streams": {
    "AGENT": {
      "subjects": [
        "tool.execute.>",
        "tool.result.>",
        "graph.ingest.>"
      ],
      "max_age": "24h",
      "storage": "memory",
      "replicas": 1
    }
  }
}
